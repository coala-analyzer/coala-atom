[CoffeeScript]
files = lib/*.coffee
bears = SpaceConsistencyBear, LineLengthBear, CoffeeLintBear
use_spaces = True
max_line_length = 80

[PYTHON]
files = **.py
bears = PEP8Bear

default_actions = PEP8Bear: ApplyPatchAction

[JSON]
files = *.json
bears = JSONFormatBear
json_sort = false
indent_size = 2

[Markdown]
files = *.md
bears = MarkdownBear, AlexBear

[Git]
bears = GitCommitBear

[yml]
bears = YAMLLintBear
files = *.yml
